<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CommonLinearLayoutMain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout style="@style/CommonLinearLayoutVerticalMatchParentAll">

            <TextView
                style="@style/CommonTextViewTitle"
                android:text="팀 조회" />

            <SearchView
                style="@style/CommonSearchView"
                android:id="@+id/teamSearchView" />

            <ListView
                style="@style/CommonListView"
                android:id="@+id/listTeam" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>