<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CommonLinearLayoutMain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/CommonLinearLayoutVerticalMatchParentAll">

            <TextView
                style="@style/CommonTextViewTitle"
                android:text="팀 상세정보" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <Button
                    style="@style/CommonButtonMatchParentWidth"
                    android:layout_width="wrap_content"
                    android:onClick="onClick"
                    android:text="팀원보기"
                    android:id="@+id/showMember" />
            </LinearLayout>
            <LinearLayout style="@style/TeamAddActivityLinearLayout">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="팀이름" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/teamName" />
            </LinearLayout>

            <LinearLayout style="@style/TeamAddActivityLinearLayout">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="담당선생님(코치)" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/coachName" />
            </LinearLayout>

            <LinearLayout style="@style/TeamAddActivityLinearLayout">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="학교" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/school" />
            </LinearLayout>

            <LinearLayout style="@style/TeamAddActivityLinearLayout">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="학년" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/grade" />
            </LinearLayout>

            <LinearLayout style="@style/TeamAddActivityLinearLayout">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="소속지점" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/branch" />
            </LinearLayout>

            <LinearLayout style="@style/TeamAddActivityLinearLayout">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="수업장소" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/ground" />
            </LinearLayout>

            <LinearLayout style="@style/TeamAddActivityLinearLayout">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="종목" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/event" />
            </LinearLayout>

            <LinearLayout style="@style/TeamAddActivityLinearLayout">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="성별" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/gender"/>
            </LinearLayout>

            <LinearLayout style="@style/TeamAddActivityLinearLayout">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="최대인원" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/maximumMember" />
            </LinearLayout>

            <LinearLayout
                style="@style/TeamAddActivityLinearLayout"
                android:layout_height="80dp">
                <TextView
                    style="@style/TeamAddActivityTextView"
                    android:text="특이사항" />
                <TextView
                    style="@style/TeamViewActivityTextView"
                    android:id="@+id/etcInfo"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <Button
                style="@style/CommonButtonMatchParentWidth"
                android:onClick="onClick"
                android:text="수정하기"
                android:id="@+id/teamEdit" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>